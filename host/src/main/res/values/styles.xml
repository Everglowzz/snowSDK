<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="MyGiftView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>



    <style name="Transparent" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!--将Activity的Theme设置成透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="horizontal_divider_light">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_light</item>
    </style>

    <style name="text_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
